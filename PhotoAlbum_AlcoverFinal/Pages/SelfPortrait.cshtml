	</div>

	<div class="modal">
	  <span class="close">&times;</span>
	  <img class="modal-content">
	</div>

	<script>
		// Get the modal element
		var modal = document.querySelector('.modal');

		// Get all images in the grid and store them in a NodeList
		var images = document.querySelectorAll('.grid-item img');

		// Get the modal image element
		var modalImg = document.querySelector('.modal-content');

		// Get the close button element
		var span = document.querySelector('.close');

		// Loop through each image in the NodeList and add a click event listener
		images.forEach(function(image) {
		  image.addEventListener('click', function() {
		    // Set the modal to display block
		    modal.style.display = "block";

		    // Set the source of the modal image to the source of the clicked image
		    modalImg.src = this.src;
		  });
		});

		// When the user clicks the close button, set the modal to display none
		span.addEventListener('click', function() {
		  modal.style.display = "none";
		});

		// When the user clicks outside the modal, set the modal to display none
		window.addEventListener('click', function(event) {
		  if (event.target == modal) {
		    modal.style.display = "none";
		  }
		});
	</script>
</body>
</html>

