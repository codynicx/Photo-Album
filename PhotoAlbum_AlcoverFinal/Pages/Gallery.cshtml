@page
@model PhotoAlbum_AlcoverFinal.Pages.GalleryModel
@{
}
<!DOCTYPE html>
<html>
  <head>
    <title>Photo Gallery</title>
    <style>
      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      body {
        background-color: black;
      }

      .gallery {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        grid-template-rows: repeat(3, 1fr);
        gap: 20px;
        height: 100vh;
        padding: 50px;
      }

      .gallery-item {
        position: relative;
        width: 100%;
        height: 400px;
        margin: 0;
        overflow: hidden;
      }

      .gallery-item img {
        width: 450px;
        height: 400px;
        object-fit: cover;
        transition: transform 0.3s ease, filter 0.3s ease;
        filter: grayscale(100%);
      }

      .gallery-item:hover img {
        transform: scale(1.1);
        filter: grayscale(0%);
      }

      .image-wrapper {
        position: relative;
      }

      .text-wrapper {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        color: white;
        text-align: center;
        font-size: 1.0em;
        font-weight: bold;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
        font-family: "Century Gothic";
        white-space: nowrap;
      }

      .more-photos-btn {
        display: inline-block;
        padding: 10px;
        width: 150px;
        border: 2px solid white;
        margin-top: 20px;
        text-decoration: none;
        color: white;
        font-weight: 300;
        font-size: 11px;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        transition: background-color 0.3s ease;
      }

      .more-photos-btn:hover {
        background-color: white;
        color: black;
      }
    </style>
  </head>
  <body>
    <div class="gallery">
      <div class="gallery-item">
        <div class="image-wrapper">
          <img src="Resources/images/AnimeMovies/13.jpg" alt="Anime Movies">
          <div class="text-wrapper">
            <h2>Anime Movies</h2>
            <a href="/AnimeMovies" class="more-photos-btn">More Photos</a>
          </div>
        </div>
      </div>
      <div class="gallery-item">
        <div class="image-wrapper">
          <img src="Resources/images/AnimeSeries/1.jpg" alt="Anime Series">
          <div class="text-wrapper">
            <h2>Anime Series</h2>
            <a href="/AnimeSeries" class="more-photos-btn">More Photos</a>
          </div>
        </div>
      </div>
      <div class="gallery-item">
        <div class="image-wrapper">
          <img src="Resources/images/Places/1.jpg" alt="Travel Destination">
          <div class="text-wrapper">
            <h2>Travel Destination</h2>
            <a href="/Places" class="more-photos-btn">More Photos</a>
          </div>
        </div>
      </div>
      <div class="gallery-item">
        <div class="image-wrapper">
          <img src="Resources/images/Self/1.jpg" alt="Self Portrait">
          <div class="text-wrapper">
            <h2>Self Portrait</h2>
            <a href="/SelfPortrait" class="more-photos-btn">More Photos</a>
          </div>
        </div>
      </div>
      <div class="gallery-item">
        <div class="image-wrapper">
          <img src="Resources/images/Family/1.jpg" alt="Family">
          <div class="text-wrapper">
            <h2>Family</h2>
            <a href="/Family" class="more-photos-btn">More Photos</a>
          </div>
        </div>
      </div>
      <div class="gallery-item">
        <div class="image-wrapper">
          <img src="Resources/images/Friends/17.jpg" alt="Friends">
          <div class="text-wrapper">
            <h2>Friends</h2>
            <a href="/Friends" class="more-photos-btn">More Photos</a>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>





